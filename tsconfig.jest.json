{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["jest", "node", "vite/client", "@testing-library/jest-dom"],
    "noEmit": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/__tests__/**/*.{ts,tsx}",
    "src/__test__/**/*.{ts,tsx}",
    "jest.setup.ts",
    "src/setupTests.ts",
    "src/setupJest.ts"
  ],
  "exclude": ["node_modules", "dist"]
}